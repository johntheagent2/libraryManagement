<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <!--Create confirmation token table-->
    <changeSet author="JohnCao" id="create-confirmation-token-table">
        <createTable tableName="confirmation_token">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_confirmation_token_id"/>
            </column>
            <column name="token" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="otp" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_date" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="expires_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="app_user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!--Create table session-->
    <changeSet id="create-session-table" author="your_name">
        <createTable tableName="session">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="jti" type="VARCHAR(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="expiration_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_date" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="createTokenOTPTable" author="your_author_name">
        <createTable tableName="otp_token">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="otp_token" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="type" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="request" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="created_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="expiration_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_date" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="app_user_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="JohnCao" id="add_foreign_key_to_token_otp">
        <addForeignKeyConstraint baseColumnNames="id"
                                 baseTableName="otp_token"
                                 constraintName="fk_otp_token_account_id"
                                 referencedColumnNames="id"
                                 referencedTableName="account"
                                 onUpdate="NO ACTION"
                                 onDelete="CASCADE"/>
    </changeSet>

    <changeSet author="JohnCao" id="add-foreign-key-to-confirmation-token">
        <addForeignKeyConstraint baseColumnNames="id"
                                 baseTableName="confirmation_token"
                                 constraintName="fk_account_id"
                                 referencedColumnNames="id"
                                 referencedTableName="account"/>
    </changeSet>
</databaseChangeLog>
